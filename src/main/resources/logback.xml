<configuration>
    <conversionRule conversionWord="cls"
                    converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%cls(%d{HH:mm:ss.SSS}){green} %cls([%thread] %-5level %logger{36}){} -%kvp- %cls(%msg){bright_white}%n"/>
    <property name="FILE_LOG_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n"/>
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <!--    APPENDER SETTINGS   -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
        </filter>
    </appender>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/access-%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
        </filter>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!--    STDOUT LOGGERS  -->
    <logger name="kr.co.programmers.springbootbasic.Processor" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="kr.co.programmers.springbootbasic.voucher" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="kr.co.programmers.springbootbasic.util" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="kr.co.programmers.springbootbasic.io.MenuCommand" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!--    ROLLING_FILE LOGGERS    -->
    <logger name="kr.co.programmers.springbootbasic.voucher" level="info">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

    <logger name="kr.co.programmers.springbootbasic.util" level="info">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

    <logger name="kr.co.programmers.springbootbasic.io.MenuCommand" level="info">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>
</configuration>
