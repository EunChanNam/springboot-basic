<configuration>

  <!--    소괄호를 기본으로 한다.-->
  <conversionRule
    conversionWord="clr"
    converterClass="org.springframework.boot.logging.logback.ColorConverter">
  </conversionRule>
  <property name="CONSOLE_LOG_PATTERN"
    value="%clr(%d{HH:mm:ss.SSS}){blue} [%thread] %clr(%-5level){green} %logger{36} - %msg%n"/>
  <property name="FILE_LOG_PATTERN"
    value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

  <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>


  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/voucher-current.log</file> <!-->2021-07-01<-->
    <!--    작성할 경우 완전히 박제되기 전(날짜가 넘어가기)에는 access.log 형태로 저장되다가
        날짜가 지나가면 박제된다. 장점 : 날짜를 몰라도 그날의 로그인지 알 수 있다.
    -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/voucher-%d{yyyy-MM-dd}.log</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>

    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>error</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>

  </appender>


  <logger name="org.programmers.devcourse.voucher.engine" level="info" additivity="false">
    <appender-ref ref="ROLLING_FILE"/>
  </logger>
  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
